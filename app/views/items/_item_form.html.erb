<%= form_for [@list, @item] do |f| %>
  <%= render 'shared/errors', collection: flash[:error] %>
  <div class="form-group row">
    <%= f.hidden_field :list_id, value: @list.id %>
    <%= f.label :title, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-7">
      <%= f.text_field :title, class: "form-control" %><br />
    </div>
  </div>
  <div class="form-group row">
    <%= f.submit class: "btn btn-lg btn-primary btn-center" %>
  </div>
<% end %>

<%= form_for @list do |f| %>
  <div class="form-group row">
    <%= f.label :title, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-7">
      <%= f.text_field :title, class: "form-control" %><br />
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :due_date, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-7">
      <%= f.datetime_local_field :due_date, class: "form-control", min: Date.today %><br />
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :public, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-7">
      <%= f.check_box :public %><br />
    </div>
  </div>
  <div class="form-group row">
    <%= f.submit class: "btn btn-lg btn-primary btn-center" %>
  </div>
<% end %>

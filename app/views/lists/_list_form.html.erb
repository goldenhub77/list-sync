<%= form_for @list do |f| %>
  <% if flash[:error] %>
    <%= render 'shared/errors', collection: flash[:error] %>
  <% end %>
  <div class="form-group row">
    <%= f.label :title, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-7">
      <%= f.text_field :title, class: "form-control" %><br />
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :due_date, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-7">
      <div class='input-group date' id='list-date-picker'>
        <%= f.hidden_field :due_date, id: "js-list-due-date" %>
        <input type='text' class="form-control" id="js-date-time-view" />
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
      <%= button_tag "Clear date", type: "button", class: "element-inline btn btn-secondary", id: "clear-list-date" %>
      <p class="form-explanation element-inline">Format: mm/dd/yyyy hh:mm AM or PM</p>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :public, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-7">
      <%= f.check_box :public %><br />
    </div>
  </div>
  <div class="form-group row">
    <%= f.submit class: "btn btn-lg btn-primary btn-center" %>
  </div>
<% end %>
